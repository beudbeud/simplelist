<theme>

	<formatVersion>4</formatVersion>
	
	<view if="vga | qvga" name="menu">
		<menuSwitch name="menuswitch">
		</menuSwitch>
		<menuSize name="menuSize">
			<height>0.7</height>
		</menuSize>
		<menuText name="menufooter">
			<fontPath>:/f8bitfortressplus.ttf</fontPath>
			<fontSize>7</fontSize>
		</menuText>
		<menuText name="menutext">
			<fontPath>:/f8bitfortressplus.ttf</fontPath>
			<fontSize>7</fontSize>
		</menuText>
		<menuTextSmall name="menutextsmall">
			<fontPath>:/f8bitfortressplus.ttf</fontPath>
			<fontSize>7</fontSize>
		</menuTextSmall>
		<menuText name="menutitle">
			<fontPath>:/f8bitfortressplus.ttf</fontPath>
			<fontSize>14</fontSize>
		</menuText>
		<helpsystem name="help">
		</helpsystem>
	</view>
	<feature supported="carousel">
		<view name="system">
			<carousel name="systemcarousel">
				<origin>0.5 0.5</origin>
				<pos>0.359 0.476</pos>
				<type>vertical</type>
				<color>00000000</color>
				<size>1 1</size>
				<logoScale>1</logoScale>
				<logoSize>0.291 0.200</logoSize>
				<maxLogoCount>3</maxLogoCount>
				<defaultTransition>instant</defaultTransition>
			</carousel>
		</view>
	</feature>

	<view name="menu, system, basic, detailed">
		<helpsystem name="help">
			<fontPath>:/f8bitfortressplus.ttf</fontPath>
			<textColor>696969</textColor>
			<iconColor>696969</iconColor>
			<fontSize>7</fontSize>
			<pos>0.05 0.9</pos>
		</helpsystem>
	</view>

	<view name="system, basic, detailed">
		<image name="videoVignette" extra="true">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./assets/vignette_frame.png</path>
			<zIndex>99</zIndex>
		</image>
		<image name="logo">
			<path>./assets/systems/$system.svg</path>
			<color>0000005a</color>
		</image>
	</view>
	<view name="system">
		<image name="background" extra="true">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<color>f4f4f4</color>
			<path>./assets/bg_white.png</path>
		</image>
		<image name="carouselShadow" extra="true">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./assets/carouselshadow.png</path>
		</image>
		<image name="carouselBG" extra="true">
			<pos>0 0.3333333</pos>
			<origin>0 0</origin>
			<size>1 0.333333</size>
			<path>./assets/backgrounds/$type.png</path>
			<path if="virtual-arcade">./assets/backgrounds/virtual-arcade.png</path>
			<path>./assets/backgrounds/$system.png</path>
			<zIndex>30</zIndex>
		</image>
		<image name="systminfoBox" extra="true">
			<pos>0.255 0.585</pos>
			<size>0.2 0.2</size>
			<path>./assets/sysinfobox.svg</path>
			<color>ffffff</color>
			<zIndex>40</zIndex>
		</image>
		<text name="systemInfo">
			<fontPath>:/f8bitfortressplus.ttf</fontPath>
			<fontSize>7</fontSize>
			<alignment>left</alignment>
			<backgroundColor>00000000</backgroundColor>
			<color>fafafa</color>
			<origin>0 0</origin>
			<pos>0.27 0.577</pos>
			<size>0.15 0.050</size>
			<zIndex>40</zIndex>
		</text>
		<image name="systemController" extra="true">
			<pos>0.70 0.5</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.3 0.25</maxSize>
			<maxSize>0.3 0.25</maxSize>
			<path>./assets/systems/default_controller.svg</path>
			<path>./assets/systems/$type_controller.svg</path>
			<path if="virtual and arcade">./assets/systems/arcade_controller.svg</path>
			<path>./assets/systems/$system_controller.svg</path>
			<color>ffffff</color>
			<zIndex>31</zIndex>
		</image>
		<image name="system" extra="true">
			<zIndex>41</zIndex>
			<origin>0.5 0.5</origin>
			<pos>0.359 0.47</pos>
			<maxSize>0.291 0.20</maxSize>
			<path>./assets/systems/$system.svg</path>
			<color>ffffff</color>
		</image>
	</view>
	<view name="basic, detailed">
		<image name="background">
			<color>37484f</color>
		</image>
		<image name="logo">
			<pos>0.0208 0.074</pos>
			<origin>0 0.5</origin>
			<maxSize>0.375 0.132</maxSize>
			<color>696969</color>
		</image>
		<text name="md_lbl_rating, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate, md_lbl_genre, md_lbl_developer, md_lbl_players, md_genre, md_developer, md_players, md_description">
			<pos>1 1</pos>
		</text>
		<datetime name="md_lastplayed, md_releasedate">
			<pos>1 1</pos>
		</datetime>
		<rating name="md_rating">
			<pos>1 1</pos>
		</rating>
		<image name="listBG" extra="true">
			<pos>0 0.5</pos>
			<origin>0 0.5</origin>
			<size>0.52 1</size>
			<path>./assets/bg_white.png</path>
			<color>f7f7f7</color>
			<zIndex>34</zIndex>
		</image>
		<image name="listShadow" extra="true">
			<pos>0.175 0.5</pos>
			<origin>0 0.5</origin>
			<size>0.52 1</size>
			<path>./assets/carouselshadowv.png</path>
			<zIndex>33</zIndex>
		</image>
		<image name="listShadow2" extra="true">
			<pos>0.175 0.5</pos>
			<origin>0 0.5</origin>
			<size>0.52 1</size>
			<path>./assets/carouselshadowv.png</path>
			<zIndex>33</zIndex>
		</image>
		<textlist name="gamelist">
			<pos>0.0208 0.150</pos>
			<origin>0 0</origin>
			<size>0.49 0.74</size>
			<horizontalMargin>0.01</horizontalMargin>
			<selectorColor>bc3040</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>9e9da5</primaryColor>
			<secondaryColor>d2505f</secondaryColor>
			<fontPath>:/f8bitfortressplus.ttf</fontPath>
			<forceUppercase>1</forceUppercase>
			<lineSpacing>2</lineSpacing>
			<alignment>left</alignment>
			<fontSize>7</fontSize>
			<zIndex>35</zIndex>
		</textlist>
		<image name="md_image">
			<pos>0.78125 0.5</pos>
			<origin>0.5 0.5</origin>
			<size>0 1</size>
			<zIndex>30</zIndex>
		</image>
		<video name="md_video">
			<pos>0.78125 0.5</pos>
			<origin>0.5 0.5</origin>
			<size>0 1</size>
			<animations>none</animations>
			<zIndex>31</zIndex>
		</video>
	</view>
</theme>
